<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ifpr.pgua.eic.threadsjavafx.Exemplo01.Controle"
            prefHeight="400.0" prefWidth="600.0"
           style="-fx-padding: 10;
                  -fx-border-style: solid inside;
                  -fx-border-width: 2;
                  -fx-border-insets: 5;
                  -fx-border-radius: 5;
                  -fx-border-color: blue;">

    <HBox>
        <Button fx:id="btStart" text="Start" onAction="#runTask"/>
        <Button fx:id="btStop" text="Stop" onAction="#exit"/>
    </HBox>

    <Label fx:id="lbStatus" text="Not started..." />
    <TextArea fx:id="taContent"/>

</VBox>
